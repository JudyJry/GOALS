<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/banner_margin">

    <ImageView
        android:id="@+id/act_imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:contentDescription="@string/Main_Act_c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/banner_image2" />

    <Button
        android:id="@+id/act_join_button"
        style="@style/Orange_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Act_join_c"
        android:layout_alignBottom="@+id/act_imageView"
        android:layout_alignEnd="@+id/act_imageView"
        android:layout_margin="@dimen/banner_margin"/>
</RelativeLayout>