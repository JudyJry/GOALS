<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Login_EditText">
        <item name="android:background">@drawable/shape_login_exit_text</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/deep_cyan</item>
        <item name="android:textColorHint">@color/light_cyan</item>
        <item name="android:maxLength">14</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>
    <style name="Login_Button">
        <item name="android:background">@drawable/selector_login_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/size_text_20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Home_TextView">
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_text_20sp</item>
    </style>
    <style name="Orange_Button">
        <item name="android:width">90dp</item>
        <item name="android:height">40dp</item>
        <item name="android:background">@drawable/shape_orange_bottom</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">5dp</item>
    </style>
    <style name="Cyan_Button" parent="Orange_Button">
        <item name="android:background">@drawable/shape_cyan_button</item>
    </style>
    <style name="Act_Item_Title">
        <item name="android:textColor">@color/deep_purple</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="Act_Item_Subtitle">
        <item name="android:textColor">@color/deep_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Act_Item_Context">
        <item name="android:textColor">@color/deep_purple</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Goal_Title">
        <item name="android:textColor">@color/deep_purple</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Goal_Title.item">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Goal_Subtitle">
        <item name="android:textColor">@color/deep_purple</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Goal_Member">
        <item name="android:textColor">@color/deep_orange</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Goal_Context">
        <item name="android:textColor">@color/deep_purple</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Goal_Context.item">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Goal_New_EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/deep_purple</item>
        <item name="android:background">@drawable/goal_new_edit_bg</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>
    <style name="Goal_New_EditText.2">
        <item name="android:background">@drawable/goal_new_edit_bg_2</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources>